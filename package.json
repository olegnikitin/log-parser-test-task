{
  "name": "nodejs-logger-iikwgs",
  "version": "1.0.0",
  "description": "Develop the command line node.js application, which parses the input log file (see Input Example). The application should find all the log messages with the level error and print them into the output file (see Output Format).",
  "main": "index.js",
  "scripts": {
    "run": "node parser.js --input ./app.log --output ./errors.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc --build && cp ./dist/*.js ./",
    "clean": "tsc --build --clean && rm -f errors.json && rm -f *.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "http://berbob-gmbh-pgrduh@git.codesubmit.io/berbob-gmbh/nodejs-logger-iikwgs"
  },
  "engines": {
    "node": ">=18"
  },
