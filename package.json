  "devDependencies": {
    "@types/node": "^18.16.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.3.2",
    "typescript": "^5.0.4"
  }
}
